<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:layout_marginLeft="@dimen/live_common_space_20"
              android:layout_marginRight="@dimen/live_common_space_20"
              android:orientation="horizontal"
              android:paddingBottom="5dp"
              android:paddingTop="5dp">

    <TextView
        android:drawableRight="@drawable/item_arrow_selector"
        android:id="@+id/md_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/live_common_space_20"
        android:paddingRight="@dimen/live_common_space_20"
        android:textColor="@color/live_common_gray_1"
        android:textSize="@dimen/md_listitem_textsize"
        tools:text="Item"/>

</LinearLayout>