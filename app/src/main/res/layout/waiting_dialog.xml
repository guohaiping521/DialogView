<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/parent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:background="@drawable/dialog_black_bg"
              android:orientation="horizontal"
              android:padding="14dp">

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="@dimen/live_common_space_60"
        android:layout_height="@dimen/live_common_space_60"
        android:layout_marginEnd="@dimen/live_common_space_30"
        android:layout_marginRight="@dimen/live_common_space_30"
        android:gravity="center_vertical"
        android:indeterminateDrawable="@drawable/dialog_waiting_bg"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#b1b1b1"
        android:textSize="19sp"/>

</LinearLayout>